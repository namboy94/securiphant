from securiphant.utils.config import load_config, write_config


def main():
    """
    This script lets the user configure their weather preferences for the
    display.
    :return: None
    """
    config = load_config()

    for key, desc in [
        ("openweathermap_api_key", "The API Key for openweathermap.org"),
        ("location_city", "The city for which to display weather data")
    ]:
        while True:
            response= input(desc + ":")
            if response != "":
                config[key] = response
                break

    write_config(config)


if __name__ == "__main__":
    main()
