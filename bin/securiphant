import argparse
from threading import Thread
from bokkichat.connection.impl.TelegramBotConnection import \
    TelegramBotConnection
from kudubot.helper import cli_bot_start
from securiphant.alert_bot.AlertBot import AlertBot
from securiphant.utils.systemd import start_service, stop_service, \
    securiphant_services
from securiphant.utils.qt import start_display
from securiphant.utils.nfc import nfc_check_loop
from securiphant.utils.door import door_check_loop
from securiphant.utils.environment import environment_check_loop


def main():
    """
    This script enables the user to start or stop all
    securiphant systemd units.
    :return: None
    """
    parser = argparse.ArgumentParser()
    parser.add_argument("action", choices={"start", "stop"},
                        help="The action to execute")
    parser.add_argument("--no-systemd", action="store_true",
                        help="Run securiphant without systemd")
    args = parser.parse_args()

    action = args.action

    if args.no_systemd:
        if action != "start":
            print("Actions besides 'start' don't work without systemd")
        else:
            threads = [
                Thread(target=start_display),
                Thread(target=nfc_check_loop),
                Thread(target=door_check_loop),
                Thread(target=environment_check_loop),
                Thread(target=lambda: cli_bot_start(
                    AlertBot, TelegramBotConnection
                ))
            ]
            for thread in threads:
                thread.start()
            for thread in threads:
                thread.join()

    else:
        for service in securiphant_services:
            if action == "start":
                start_service(service)
            else:
                stop_service(service)


if __name__ == "__main__":
    main()
