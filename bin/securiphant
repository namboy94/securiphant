import argparse
from securiphant.utils.systemd import start_service, stop_service, \
    securiphant_services


def main():
    """
    This script enables the user to start or stop all
    securiphant systemd units.
    :return: None
    """
    parser = argparse.ArgumentParser()
    parser.add_argument("mode", choices={"start", "stop"})
    mode = parser.parse_args().mode

    for service in securiphant_services:
        if mode == "start":
            start_service(service)
        else:
            stop_service(service)


if __name__ == "__main__":
    main()
