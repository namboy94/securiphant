def main():
    """
    This script checks whether the NFC reader reads an authenticated NFC tag
    If a authenticated tag is held against the sensor, the value

    is_authenticated

    is set to True in the shared database

    :return: None
    """
    while True:
        sensor_is_authenticated = False  # TODO get this using GPIO

        # TODO Save values to database
        if sensor_is_authenticated:
            db_is_authenticated = True


if __name__ == "__main__":
    main()
